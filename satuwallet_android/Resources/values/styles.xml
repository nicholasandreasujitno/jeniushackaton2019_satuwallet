<resources>

  <!-- Splash screen. -->
  <style name="splashscreen" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splashscreen_scaled</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>

  <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
    <!--<item name="android:background">@drawable/login_bg2</item>-->
    <item name="android:windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">@color/colorAccent</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="android:textColor">@color/white_text</item>
  </style>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="android:windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

  </style>

  <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
    <item name="android:textColor">@color/white_text</item>
  </style>
  <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
    <!--<item name="android:fontFamily">@font/magnolia_script</item>-->
    <!--<item name="android:textColorPrimary">@color/white</item>-->
  </style>

  <!-- Custom Alert Dialog -->
  <style name="MyAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="windowFixedWidthMajor">90%</item>
    <item name="windowFixedWidthMinor">50%</item>
    <item name="windowFixedWidthMajor">90%</item>
    <item name="windowFixedWidthMinor">30%</item>
    <item name="colorAccent">@color/colorPrimaryDark</item>
    <item name="android:textColor">@color/black_text</item>
    <item name="android:background">@color/white_background</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
