<?xml version="1.0" encoding="utf-8" ?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorPrimaryDark">
  <item android:id="@android:id/mask">
    <shape android:shape="rectangle">
      <solid android:color="@color/colorPrimaryDark" />
      <corners
        android:topLeftRadius="@dimen/button_radius_small"
        android:bottomLeftRadius="@dimen/button_radius_small"
        android:topRightRadius="0dp"
        android:bottomRightRadius="0dp"  />
    </shape>
  </item>
  <item android:id="@android:id/background" android:right="-1dp">
    <shape android:shape="rectangle">
      <stroke android:width="1dp" android:color="@color/divider_light" />
      <gradient
          android:angle="90"
          android:startColor="@color/white_background"
          android:endColor="@color/white_background"
          android:type="linear" />
      <corners
        android:topLeftRadius="@dimen/button_radius_small"
        android:bottomLeftRadius="@dimen/button_radius_small"
        android:topRightRadius="0dp"
        android:bottomRightRadius="0dp"  />
    </shape>
  </item>
</ripple>